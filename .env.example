# Gemini AI Configuration (Required for AI-powered analysis)
GEMINI_API_KEY=your_gemini_api_key_here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=production

# Backend API Endpoints
# For Next.js serverless deployment, API routes are handled internally
# Development: http://localhost:3000
# Production: https://your-deployed-domain.com

# Optional: API Authentication
# NEXT_PUBLIC_API_KEY=your_api_key_here

# Optional: Error Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn_here

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=your_google_analytics_id
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key

# Feature Flags
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_TEMPLATES=true
NEXT_PUBLIC_ENABLE_ANALYSIS=true

# File Upload Limits
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain
